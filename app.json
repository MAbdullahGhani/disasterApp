{
  "expo": {
    "name": "PDR - Disaster Ready",
    "owner": "abdullah797",
    "slug": "disasterApp",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/Pdr_logo.png",
    "scheme": "disasterapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.abdullah797.disasterapp",
      "buildNumber": "1.0.1",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "This app needs location access to provide you with local weather forecasts and disaster alerts for your area.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "This app needs location access to provide you with local weather forecasts and disaster alerts for your area.",
        "NSLocationAlwaysUsageDescription": "This app needs location access to provide you with local weather forecasts and disaster alerts for your area.",
        "UIBackgroundModes": [
          "location",
          "background-processing",
          "background-fetch"
        ],
        "CFBundleURLTypes": [
          {
            "CFBundleURLName": "google-signin",
            "CFBundleURLSchemes": [
              "com.googleusercontent.apps.139120385098-pqfbrjjp3fqubai9c7ppo31c376umrl7"
            ]
          },
          {
            "CFBundleURLName": "expo-auth-session", 
            "CFBundleURLSchemes": [
              "disasterapp"
            ]
          }
        ]
      }
    },
    "android": {
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "RECEIVE_BOOT_COMPLETED",
        "VIBRATE",
        "WAKE_LOCK",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_BACKGROUND_LOCATION",
        "android.permission.FOREGROUND_SERVICE",
        "android.permission.FOREGROUND_SERVICE_LOCATION"
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/Pdr_logo.png",
        "backgroundColor": "#FFFFFF"
      },
      "icon": "./assets/images/Pdr_logo.png",
      "edgeToEdgeEnabled": true,
      "package": "com.abdullah797.disasterapp",
      "versionCode": 2,
      "intentFilters": [
        {
          "action": "VIEW",
          "data": [
            {
              "scheme": "disasterapp"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "@react-native-google-signin/google-signin",
        {
          "iosUrlScheme": "com.googleusercontent.apps.139120385098-pqfbrjjp3fqubai9c7ppo31c376umrl7"
        }
      ],
      "expo-router",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "This app needs access to your location to provide emergency alerts based on your current area.",
          "locationAlwaysPermission": "This app needs background location access to send you critical safety alerts even when the app is closed.",
          "locationWhenInUsePermission": "This app needs location access to provide weather updates and local emergency information.",
          "isIosBackgroundLocationEnabled": true,
          "isAndroidBackgroundLocationEnabled": true
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/Pdr_logo.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#FFFFFF"
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/notification-icon.png",
          "color": "#4ECDC4"
        }
      ],
      "expo-task-manager",
      "expo-web-browser",
      "expo-secure-store",
      "expo-font",
      "expo-localization"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "runtimeVersion": "1.0.1",
    "updates": {
      "url": "https://u.expo.dev/fdd0ee21-9313-44ae-850a-445938ce044d"
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "fdd0ee21-9313-44ae-850a-445938ce044d"
      }
    }
  }
}